# Environment variables for ECM Monitoring
# Copy this file to .env and adjust values according to your environment

# Database Configuration
MYSQL_ROOT_PASSWORD=change_this_password
MYSQL_DATABASE=synergy
MYSQL_USER=app_user
MYSQL_PASSWORD=app_user_password

# Node.js Backend Configuration
NODE_ENV=production
DB_HOST=database
DB_NAME=synergy
DB_USER=root
DB_PASSWORD=change_this_password
DB_SYNC_ALTER=false
JWT_SECRET=change_this_to_a_secure_random_string
CLIENT_URL=http://localhost

# Server Configuration
SERVER_PORT=5001

# For Production Environments
# Set these variables in production for enhanced security
# DB_USER=app_user  # Use a non-root user in production
# DB_PASSWORD=app_user_password
# MYSQL_ROOT_PASSWORD=secure_root_password
# JWT_SECRET=very_secure_random_string_for_jwt
# CLIENT_URL=https://your-domain.com  # Use HTTPS in production
