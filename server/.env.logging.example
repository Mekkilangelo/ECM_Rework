# Configuration des logs du serveur ECM Synergia
# Niveaux: 0=ERROR, 1=WARN, 2=INFO, 3=DEBUG, 4=TRACE

# Niveau global (par défaut: 2=INFO)
LOG_LEVEL=2

# Configuration par module
LOG_ROUTES_LEVEL=1
LOG_CONTROLLERS_LEVEL=1
LOG_MIDDLEWARE_LEVEL=0
LOG_AUTH_LEVEL=1
LOG_DB_LEVEL=0
LOG_QUERIES_LEVEL=0
LOG_FILE_SERVICE_LEVEL=1
LOG_REPORT_SERVICE_LEVEL=2
LOG_SECURITY_LEVEL=1
LOG_PERFORMANCE_LEVEL=0

# Pour réduire drastiquement les logs, utiliser:
# LOG_LEVEL=0
# LOG_ROUTES_LEVEL=0
# LOG_CONTROLLERS_LEVEL=0
# LOG_MIDDLEWARE_LEVEL=0

# Pour déboguer intensivement, utiliser:
# LOG_LEVEL=4
# LOG_ROUTES_LEVEL=4
# LOG_CONTROLLERS_LEVEL=4